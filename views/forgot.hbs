<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Forgot Password</h1>
    <hr>
    <!-- show any messages that come back with authentication -->
    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}
    <!-- LOGIN FORM -->
    <form action="/forgot" method="post" data-toggle="validator" role="form">
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
            <div class="help-block with-errors"></div>
        </div>
        <button type="submit" class="btn btn-primary btn-md">Reset Password</button>
        <a href="/" class="btn btn-primary btn-md">Cancel</a>
    </form>
  </div>
</div>
