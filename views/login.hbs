<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Login</h1>
    <!-- show any messages that come back with authentication -->
    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}
    <!-- LOGIN FORM -->
    <form action="/login" method="post" data-toggle="validator" role="form">
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" data-minlength="5" class="form-control" id="password" name="password" data-error="must enter minimum of 5 characters" required>
            <div class="help-block with-errors"></div>
        </div>
        <button type="submit" class="btn btn-warning btn-md">Login</button>
        <a href="/" class="btn btn-warning btn-md">Cancel</a>

    </form>
    <hr>
    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>
  </div>
</div>
