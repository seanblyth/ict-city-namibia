<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span>Profile</h1>
    <hr>
    <!-- show any messages that come back with authentication -->
    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}
    <!-- LOGIN FORM -->
    <form action="/update" method="post" data-toggle="validator" role="form">
        <div class="form-group">
            <label>First name</label>
            <input type="text" data-minlength="1" class="form-control" name="fname" value="{{user.local.fname}}" required>
        </div>
        <div class="form-group">
            <label>Last name</label>
            <input type="text" class="form-control" name="lname" value="{{user.local.lname}}" required>
        </div>
        <div class="form-group">
            <label>Country</label>
            <select class="form-control bfh-countries" name="country" value="{{user.local.country}}" required></select>
        </div>
        <div class="form-group">
            <label>Occupation</label>
            <input type="text" class="form-control" name="occupation" value="{{user.local.occupation}}" required>
        </div>
        <div class="form-group">
            <label>Company</label>
            <input type="text" class="form-control" name="company" value="{{user.local.company}}" required>
        </div>
        <div class="form-group">
            <label>Phone number (with international dialing code)</label>
            <input type="text" class="form-control" name="phone" value="{{user.local.phone}}" required>
        </div>
        <label>Areas of interest</label>
        <div class="form-group">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="structural" value="true" {{#if user.local.structural}}checked{{/if}}>
            Structural
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="civils" value="true" {{#if user.local.civils}}checked{{/if}}>
            Civils
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="electrical" value="true" {{#if user.local.electrical}}checked{{/if}}>
            Electrical
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="plumbing" value="true" {{#if user.local.plumbing}}checked{{/if}}>
            Plumbing
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="carpentry" value="true" {{#if user.local.carpentry}}checked{{/if}}>
            Carpentry
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="roofing" value="true" {{#if user.local.roofing}}checked{{/if}}>
            Roofing
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="flooring" value="true" {{#if user.local.flooring}}checked{{/if}}>
            Flooring
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="shopfitting" value="true" {{#if user.local.shopfitting}}checked{{/if}}>
            Shopfitting
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="doorswindows" value="true" {{#if user.local.doorswindows}}checked{{/if}}>
            Doors & windows
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="network" value="true" {{#if user.local.network}}checked{{/if}}>
            IT network infrastructure
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="hardware" value="true" {{#if user.local.hardware}}checked{{/if}}>
            IT - hardware
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="telecom" value="true" {{#if user.local.telecom}}checked{{/if}}>
            Telecommunications
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="biometrics" value="true" {{#if user.local.biometrics}}checked{{/if}}>
            Biometrics & security
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="airconditioning" value="true" {{#if user.local.airconditioning}}checked{{/if}}>
            Airconditioning
          </label><br>
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="software" value="true" {{#if user.local.software}}checked{{/if}}>
            Software, electronics & automation
          </label>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" required>
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" data-minlength="5" class="form-control" name="password" data-error="must enter minimum of 5 characters" required>
            <div class="help-block with-errors"></div>
        </div>
        <button type="submit" class="btn btn-warning btn-md">Update</button>
        <a href="/" class="btn btn-warning btn-md">Cancel</a>
    </form>
  </div>
</div>
